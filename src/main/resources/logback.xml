<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
	    <encoder>
      		<pattern>%d{HH:mm:ss.SSS} [%-25.25thread{25}] %-5level %40.40(%logger{35}.%M\(%line\)) - %msg %n</pattern>
    	</encoder>
	</appender>

	<root level="info">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>